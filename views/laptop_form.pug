extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='Name of laptop' name='name' required='true' value=(undefined === laptop ? '' : laptop.name) )
    div.form-group
      label(for='manufacturer') Manufacturer:
      select#manufacturer.form-control(type='select', placeholder='Select manufacturer' name='manufacturer' required='true' )
        for manufacturer in manufacturers
          if laptop
            option(value=manufacturer._id selected=(manufacturer._id.toString()===laptop.manufacturer._id || manufacturer._id.toString() == laptop.manufacturer) ? 'selected' : false) #{manufacturer.name}
            //- option(
            //-   value=author._id
            //-   selected=(
            //-     author._id.toString()==book.author._id
            //-     || author._id.toString()==book.author
            //-   ) ? 'selected' : false
            //- ) #{author.name}
          else
            option(value=manufacturer._id) #{manufacturer.name}
    div.form-group
      label(for='desc') Description:
      textarea#desc.form-control(type='textarea', placeholder='Add description' name='desc' required='true') #{undefined === laptop ? '' : laptop.desc}
    div.form-group
      label(for='price') Price:
      input#desc.form-control(type='number', name='price' required='true' min='0' value=(undefined === laptop ? '' : laptop.price) ) 
    div.form-group
      label(for='stock') Stock:
      input#desc.form-control(type='number', name='stock' required='true' min='0' step='1' value=(undefined === laptop ? '' : laptop.stock) )
    div.form-group
      label(for='category') Category:
      select#category.form-control(type='select', placeholder='Select category' name='category' required='true' )
        for category in categories
          if laptop
            option(value=category._id selected=(category._id.toString()===laptop.category._id.toString() ? 'selected' : false) ) #{category.name}
          else
            option(value=category._id) #{category.name}
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg